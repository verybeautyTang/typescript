{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [false],
        "max-classes-per-file": false,
        "no-console": false

    },
    "rulesDirectory": [],
    "compilerOptions": {
        "target" : "es5 es6",
        "module": "commonjs",
        "lib": [
            "es6",
            "dom"
        ],
        "esModuleInterop": true,
        
        "baseUrl": "./",
        "paths": {
            "*": ["node_modules/@types","src/typing"]
        },
        "rootDir": ["src/module", "src/core"],
        "noResolve": false
    }
}